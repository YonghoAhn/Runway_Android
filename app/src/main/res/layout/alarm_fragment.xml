<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.AlarmFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
    >

        <ImageView
                android:src="@drawable/ic_circle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/guideline"
                android:layout_marginBottom="32dp" app:layout_constraintDimensionRatio="1:1"/>
        <androidx.appcompat.widget.Toolbar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline">


            <ToggleButton
                    android:textOn="M"
                    android:textOff="M"
                    android:background="@drawable/togglebtn_weekday_selector"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/toggleMonday" android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/toggleTuesday" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintDimensionRatio="1:1" android:checked="true"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="4dp" android:layout_marginStart="4dp"/>
            <ToggleButton
                    android:textOn="T"
                    android:textOff="T"
                    android:background="@drawable/togglebtn_weekday_selector"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/toggleTuesday" android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/toggleMonday" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/toggleWednesday"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintDimensionRatio="w,1:1" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>
            <ToggleButton
                    android:textOn="W"
                    android:textOff="W"
                    android:background="@drawable/togglebtn_weekday_selector"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/toggleWednesday" android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/toggleTuesday" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/toggleThursday" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintDimensionRatio="w,1:1"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
            <ToggleButton
                    android:textOn="T"
                    android:textOff="T"
                    android:background="@drawable/togglebtn_weekday_selector"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/toggleThursday" android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/toggleWednesday" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/toggleFriday" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintDimensionRatio="w,1:1"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
            <ToggleButton
                    android:textOn="F"
                    android:textOff="F"
                    android:background="@drawable/togglebtn_weekday_selector"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/toggleFriday" android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/toggleThursday" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/toggleSaturday" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintDimensionRatio="w,1:1"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
            <ToggleButton
                    android:textOn="S"
                    android:textOff="S"
                    android:background="@drawable/togglebtn_weekday_selector"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/toggleSaturday" android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/toggleFriday" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/toggleSunday" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintDimensionRatio="w,1:1"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
            <ToggleButton
                    android:textOn="S"
                    android:textOff="S"
                    android:background="@drawable/togglebtn_weekday_selector"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/toggleSunday" android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/toggleSaturday"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintDimensionRatio="w,1:1"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.5"/>
        <TextView
                android:text="Music volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                style="@style/ContentTextView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
        <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:max="100" android:progress="50"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>